@model Product
@{
    Layout = "_Layout1";
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-black"><i class="bi bi-plus-lg"></i>&nbsp; Add Product</h3>
            <hr />
        </div>
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="mb-3 col-12">
                        <label>Product </label>
                        <input asp-for="ProductName" type="text" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div>

                @* <div class="row">
                    <div class="mb-3 col-6">
                        <label>Upload Image</label>
                        <input asp-for="Product.ImageUrl" type="file" name="file" class="form-control" />
                    </div>
                    <div class="mb-3 col-6">
                        <label>Product Category</label>
                        <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" type="text" class="form-select">
                            <option disabled selected>--Select Category--</option>
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                </div> *@
                
                <div class="mb-3">
                    <label>Description</label>
                    <textarea asp-for="Description" type="text" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row">
                <div class="mb-3 col-6">
                    <label>Price</label>
                    <input asp-for="Price" type="text" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label>Quantity</label>
                    <input asp-for="Quantity" type="text" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                    <div class="form-group">
                        <label asp-for="JournalId" class="control-label"></label>
                        <select asp-for="JournalId" class="form-control" asp-items="ViewBag.JournalList"></select>
                        <span asp-validation-for="JournalId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-6">
                            <button type="submit" class="btn btn-success col-lg-12">Submit</button>
                    </div>
                    <div class="col-6">
                        <a  asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
                    </div>
                </div>
            </div>
        </div>
        @* <div asp-validation-summary="All"></div> *@
       
       
    </div>
</form>
@section Scripts{
    @{
        <partial name ="_ValidationScriptsPartial"/>
    }
}