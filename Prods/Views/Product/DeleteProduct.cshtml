@model Product
@{
    Layout = "_Layout1";
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-black"><i class="bi bi-trash3-fill"></i>&nbsp;Delete Product</h3>
            <hr />
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="row">
            <div class="mb-3 col-12">
                <label>Product Name</label>
                <input asp-for="ProductName" type="text" class="form-control" disabled />
            </div>
        </div>
        <div class="mb-3">
            <label>Description</label>
                <textarea asp-for="Description" type="text" class="form-control" disabled></textarea>
        </div>
        <div class="row">
            <div class="mb-3 col-6">
                <label>Price</label>
                <input asp-for="Price" type="text" class="form-control" disabled />
            </div>
            <div class="mb-3 col-6">
                <label>Quantity</label>
                <input asp-for="Quantity" type="text" class="form-control" disabled />
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger col-lg-12">Delete</button>
            </div>
            <div class="col-6">
                <a  asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
            </div>
        </div>

    </div>
</form>