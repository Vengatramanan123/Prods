@model Product
@{
    Layout = "_Layout1";
}
<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-black"><i class="bi bi-plus-lg"></i>&nbsp; Edit Product</h3>
            <hr />
        </div>
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="mb-3 col-6">
                        <label>Product Name</label>
                        <input asp-for="Id" hidden />
                        <input asp-for="ImageUrl" hidden />
                        <input asp-for="ProductName" type="text" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-6">
                        <label>Upload Image</label>
                        <input asp-for="ImageUrl" type="file" name="file" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label>Description</label>
                    <textarea asp-for="Description" type="text" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="mb-3 col-6">
                        <label>Price</label>
                        <input asp-for="Price" type="text" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-6">
                        <label>Quantity</label>
                        <input asp-for="Quantity" type="text" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="JournalId" class="control-label">Journal</label>
                        <select asp-for="JournalId" class="form-control" asp-items="ViewBag.JournalList"></select>
                        <span asp-validation-for="JournalId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-6">
                        <button type="submit" class="btn btn-success col-lg-12">Submit</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
                    </div>
                </div>
            </div>
        </div>
        @* <div asp-validation-summary="All"></div> *@


    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}