@using Prods.Models.ViewModel

@{
    Layout = "_Layout1";
}

<div class="container">
    <div class="fs-4 fw-bold">Admin Dashboard</div>
    <div class="row mt-5">
        <!-- Total Users Card -->
        <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
            <div class="card d-flex align-items-center p-3 rounded bg-primary text-white">
                <div class="d-flex align-items-center">
                    <div class="fs-2 me-3">
                        <i class="bi bi-clipboard-check-fill"></i>
                    </div>
                    <div>
                        <h3>Total</h3>
                        <span>@Model.TotalCount</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- New Users Card -->
        <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
            <div class="card d-flex align-items-center p-3 rounded bg-success text-white">
                <div class="d-flex align-items-center">
                    <div class="fs-2 me-3">
                        <i class="bi bi-boxes"></i>
                    </div>
                    <div>
                        <h3>Products</h3>
                        <span>@Model.ProductCount</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Journals Card -->
        <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
            <div class="card d-flex align-items-center p-3 rounded bg-info text-white">
                <div class="d-flex align-items-center">
                    <div class="fs-2 me-3">
                        <i class="bi bi-journals"></i>
                    </div>
                    <div>
                        <h3>Journals</h3>
                        <span>@Model.JournalCount</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Count -->
        <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
            <div class="card d-flex align-items-center p-3 rounded bg-warning text-white">
                <div class="d-flex align-items-center">
                    <div class="fs-2 me-3">
                        <i class="bi bi-box"></i>
                    </div>
                    <div>
                        <h3>Orders</h3>
                        <span>@Model.OrderCount</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4 p-4 rounded box-shadow-lg">
        <!-- Chart and Table -->
        <div>
            <div class="row">
                <!-- Chart -->
                <div class="col-lg-8">
                    <div class="fs-4 fw-bold">Products and Journals Chart</div>
                    <canvas id="myChart"></canvas>
                </div>

                <!-- User Summary Table -->
                <div class="col-lg-4 mt-2">
                    <div class="fs-4 fw-bold">User Summary</div>
                    <div class="mt-4">
                        <table id="usertable" class="table table-bordered">
                            <thead class="bg-secondary">
                                <tr>
                                    <th>Name</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.products){
                                    <tr>
                                        <td>@product.ProductName</td>
                                        <td>@product.Price</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-lg-12 mt-2">
                    <div class="fs-4 fw-bold">Order Summary</div>
                    <div class="mt-4">
                        <table id="ordertable" class="table table-bordered">
                            <thead class="bg-secondary">
                                <tr>
                                    <th>Customer Id</th>
                                    <th>Order</th>
                                    <th>Order Status</th>
                                    <th>Product Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.orders)
                                {
                                <tr>
                                        <td>@order.UserId</td>
                                        <td>@order.ProductName</td>
                                        <td>@order.OrderStatus</td>
                                        <td>@order.Price</td>
                                        <td>@order.Total</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>

    <script>
        const ctx = document.getElementById('myChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Products', 'Journals','Orders'],
                datasets: [{
                    label: 'Count',
                    data: [@Model.ProductCount, @Model.JournalCount,@Model.OrderCount],
                    backgroundColor: ['#28a745', '#17a2b8', '#ffc107'],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        $(document).ready(function () {
            $('#usertable').DataTable({
                "paging": false,
                "searching": false,
                "info": true,
                "scrollY": "200px",
                "scrollCollapse": true
            });
        });
        $(document).ready(function () {
            $('#ordertable').DataTable({
                "paging": false,
                "searching": false,
                "info": true,
                "scrollY": "200px",
                "scrollCollapse": true
            });
        });
    </script>
}
