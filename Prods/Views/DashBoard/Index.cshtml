@using Prods.Models.ViewModel
@{
    Layout = "_Layout1";
}

<div class="container">
    <div class="fs-4 fw-bold">Admin Dashboard</div>
    <div class="card mt-4 col-lg-12 p-5 rounded box-shadow-lg">
        <div class="row">
            <!-- Total Users Card -->
            <div class="card col-lg-4 d-flex align-items-center p-3 rounded bg-primary text-white">
                <div class="d-flex align-items-center">
                    <div class="fs-2 me-3">
                        <i class="bi bi-clipboard-check-fill"></i>
                    </div>
                    <div>
                        <h3>Total Count</h3>
                        <span>@Model.TotalCount</span>
                    </div>
                </div>
            </div>

            <!-- New Users Card -->
            <div class="card col-lg-3 ms-5 d-flex align-items-center p-3 rounded bg-success text-white">
                <div class="d-flex align-items-center">
                    <div class="fs-2 me-3">
                        <i class="bi bi-boxes"></i>
                    </div>
                    <div>
                        <h3>Products</h3>
                        <span>@Model.ProductCount</span>
                    </div>
                </div>
            </div>

            <!-- Another Total Users Card -->
            <div class="card col-lg-3 ms-5 d-flex align-items-center p-3 rounded bg-info text-white">
                <div class="d-flex align-items-center">
                    <div class="fs-2 me-3">
                        <i class="bi bi-journals"></i>
                    </div>
                    <div>
                        <h3>Journals</h3>
                        <span>@Model.JournalCount</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Chart and Table -->
        <div class="mt-5">
            <div class="row">
                <!-- Chart -->
                <div class="col-lg-8">
                    <div class="fs-4">Users</div>
                    <canvas id="myChart"></canvas>
                </div>
                
                <!-- User Summary Table -->
                <div class="col-lg-4 mt-2">
                    <div class="fs-4">User Summary</div>
                    <div class="mt-4">
                        <table id="usertable" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                    <tr>
                                        <td>Name</td>
                                        <td>Email</td>
                                    </tr>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>

    <script>
        const ctx = document.getElementById('myChart');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'Jun', 'Jul'],
                datasets: [{
                    label: 'User Counts',
                    data: [12, 19, 3, 5, 2, 3],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        $(document).ready(function(){
            $('#usertable').DataTable({
                "paging": false,
                "searching": false,
                "info": true
            });
        });
    </script>
}
