@model List<Customer>
@{
    Layout = "_Layout1";
}
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h3>Customer Lists</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-cart-plus-fill"></i>&nbsp;Add Customer
            </a>
        </div>
    </div>
</div>
<table id="tbl" class="table table-bordered table-striped mt-4">
    <thead>
        <tr>
            <th>Id</th>
            <th>Customer</th>
            <th>Address</th>
            <th>Email</th>
            <th>Contact Number</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.CustomerName</td>
                <td>@obj.Address</td>
                <td>@obj.CustomerEmail</td>
                <td>@obj.ContactNumber</td>
                <td>
                    <div class="w-75">
                        <a asp-controller="Customer" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-controller="Customer" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tbl').DataTable({
                'paging': true,
                'searching': true
            });
        });


    </script>

}
